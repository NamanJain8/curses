include start

call OK mvaddstr 10 10 "xxxxxxxxxx"
call OK mvaddstr 11 10 "yyyyyyyyyy"
call OK refresh

# test using the input queue
wchar ACHAR "A"
call OK unget_wch $ACHAR
noinput
call2 $KEY_CODE_YES $ACHAR mvget_wch 10 10

wchar res ["a"]
input "a\n"
call2 OK $res mvget_wch 11 11
call OK refresh

# test keypad translations
wchar esc "\e"
input "\eOD"
call2 OK $esc mvget_wch 11 13
call OK refresh

# character at cursor position is cleared
call OK keypad STDSCR $TRUE
wchar key $KEY_LEFT
input "\eOD"
call2 $KEY_CODE_YES $key mvget_wch 10 14
call OK refresh
compare mvget_wch.chk
